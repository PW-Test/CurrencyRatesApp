@{
    ViewBag.Title = "Currency Rates";
}

<div class="container">
    <div class="row">
        <h4>
            Currency rates fetched from https://www.forex.se
        </h4>
    </div>
    <div class="row">
        <button class="btn" data-bind="click: loadRates">Load</button>
    </div>

    <div class="row">
        <table class="table">
            <thead>
                <tr>
                    <th>Code</th>
                    <th>Buy</th>
                    <th>Sell</th>
                </tr>
            </thead>
            <tbody data-bind="foreach: Rates">
                <tr>
                    <td data-bind="text: Code"> </td>
                    <td data-bind="text: Buy"> </td>
                    <td data-bind="text: Sell"> </td>
                </tr>
            </tbody>
        </table>
    </div>


</div>